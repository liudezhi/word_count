CMAKE_MINIMUM_REQUIRED(VERSION 3.2)
PROJECT(word_count_project)
ADD_SUBDIRECTORY(${CMAKE_SOURCE_DIR}/core)

SET(EXECUTABLE_OUTPUT_PATH ${CMAKE_BINARY_DIR}/bin)

INCLUDE_DIRECTORIES(./core/include)
INCLUDE_DIRECTORIES(./core/get_word/include)
LINK_DIRECTORIES(${LIBRARY_OUTPUT_PATH})
ADD_EXECUTABLE(word_count main.c)
# TARGET_LINK_LIBRARIES(word_count libmanage.a libget_word.a)
TARGET_LINK_LIBRARIES(word_count manage get_word)
